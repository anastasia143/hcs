<%= form_for @user do |s| %>
  <p>
    <%= s.label :surname %><br>
    <%= s.text_field :surname %>
  </p>
  <p>
    <%= s.label :name %><br>
    <%= s.text_field :name %>
  </p>
  <p>
    <%= s.label :patronymic %><br>
    <%= s.text_field :patronymic %>
  </p>
  <p>
    <%= s.label :telephone %><br>
    <%= s.text_field :phone %>
  </p>
  <p>
    <%= s.label :email %><br>
    <%= s.text_field :email %>
  </p>
  <p>
    <%= s.submit %>
  </p>
<% end %>
